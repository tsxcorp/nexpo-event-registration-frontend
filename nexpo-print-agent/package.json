{
  "name": "nexpo-print-agent",
  "version": "1.0.0",
  "description": "Nexpo Local Print Agent - Native printing service for BIXOLON printers",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "pkg src/index.js --targets node18-win-x64,node18-macos-x64,node18-linux-x64 --output dist/nexpo-print-agent",
    "install-service": "node scripts/install-service.js",
    "uninstall-service": "node scripts/uninstall-service.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-printer": "^1.0.4",
    "qrcode": "^1.5.4",
    "sharp": "^0.32.6",
    "uuid": "^9.0.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "templates/**/*",
      "drivers/**/*"
    ],
    "targets": [
      "node18-win-x64",
      "node18-macos-x64",
      "node18-linux-x64"
    ]
  },
  "keywords": [
    "nexpo",
    "print",
    "bixolon",
    "label-printer",
    "native-printing"
  ],
  "author": "Nexpo Team",
  "license": "MIT"
}
